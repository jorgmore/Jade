package es.ucm.jadedrools
 
import es.ucm.jadedrools.mapa.Mapa;
import es.ucm.jadedrools.mapa.TipoCasilla;
import es.ucm.jadedrools.mapa.Casilla;
import es.ucm.jadedrools.agentes.explorador.Explorador;

rule "comprobarMineral"
    when
        $exp: Explorador()
        m : Mapa(m.getCasilla($exp.getX(),$exp.getY()).getMinerales().isEmpty() == false)
    then
    	$exp.setEncontradoMineral(true);
end

rule "comprobarNoHayMineral"
    when
        $exp: Explorador()
        m : Mapa(m.getCasilla($exp.getX(),$exp.getY()).getMinerales().isEmpty() == true)
    then
    	$exp.setEncontradoMineral(false);
end


